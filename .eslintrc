{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": ["warn"],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "arrowParens": "always",
        "endOfLine": "auto",
        "trailingComma": "all"
      }
    ]
  }
}
